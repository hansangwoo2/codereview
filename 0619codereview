	private Object sendPWMail(String title, Map<String, Object> param) throws Exception{
		HttpServletRequest req = RequestContextListener.getCurrentRequest();
		String homepageUrl = "http://"+req.getHeader("host")+req.getContextPath();
		
		String mailContents = "";
        mailContents += "<!DOCTYPE html PUBLIC \"-//W3C//DTD XHTML 1.0 Transitional//EN\" \"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd\">";
        mailContents += "<html xmlns=\"http://www.w3.org/1999/xhtml\" xml:lang=\"kr\">";
        mailContents += "<head>";
        mailContents += "<title>해운거래정보센터</title>";
        mailContents += "<meta http-equiv=\"Content-Type\" content=\"text/html; charset=utf-8\" />";
        mailContents += "</head>";
        mailContents += "<body>";
		mailContents += "	<div id=\"wrap\" style=\"width:100%; max-width:800px; margin:16px auto;\">";
		mailContents += "		<div id=\"header\" style=\"width:100%; border-bottom:1px solid #213caf; padding:6px 0; margin:16px 0; content:\"\"; display:block; height:0; clear:both;\">";
		mailContents += "			<div id=\"img_wrap\" style=\"display:inline-block; width:200px; margin:12px 0 0; vertical_align:bottom; float:left;\">";
		mailContents += "				<img style=\"width:200px; height:auto;\" src=\""+homepageUrl+"/resources/images/logo.jpg\" alt=\"해운거래정보센터\" />";
		mailContents += "			</div>";
		mailContents += "			<h3 style=\"display:inline-block; width:200px; margin:12px 0 0 !important; padding:0 !important; border:0 !important; text-align:right; font-size:22pt; color:#213caf; vertical_align:bottom; float:right;\"> 비밀번호 찾기</h3>";
		mailContents += "		</div>";
		mailContents += "		<p id=\"description\" style=\"font-size:12pt; color:#213caf; font-weight:bold; padding:6px 0; line-height:1.4; text-align:left;\">";
		mailContents += "			 <br>"+param.get("USER_NM")+" 님, 문의하신 패스워드입니다. <br>";
		mailContents += "		</p>";
		mailContents += "		<p id=\"additional\" style=\"padding:6px 0; line-height:1.4; text-align:left; font-size:11pt; color:#000; font-weight:normal;\">";
		mailContents += 			"<br><span style=\"font-weight:bold;\">아래의 패스워드는 임시 패스워드입니다. 로그인 후 꼭 수정하시기 바랍니다.</span><br>";
		mailContents += 			"언제나 저희 해운거래정보센터를 이용해 주셔서 감사합니다.";
		mailContents += "		</p>";
		mailContents += "		<table id=\"info\" style=\"width:100%; max-width:600px; border-top:2px solid #213caf; border-bottom:1px solid #ccc; margin:24px auto;\">";
		mailContents += "			<colgroup>";
		mailContents += "				<col width=\"40%\">";
		mailContents += "				<col width=\"60%\">";
		mailContents += "			</colgroup>";
		mailContents += "			<tbody>";
		mailContents += "				<tr style=\"border-bottom:1px solid #efefef;\">";
		mailContents += "					<th style=\"padding:6px 12px; text-align:right;\">아이디</th>";
		mailContents += "					<td style=\"padding:6px 12px;\">"+param.get("USER_ID")+"</td>";
		mailContents += "				</tr>";
		mailContents += "				<tr style=\"border-bottom:1px solid #efefef;\">";
		mailContents += "					<th style=\"padding:6px 12px; text-align:right;\">사용자 명</th>";
		mailContents += "					<td style=\"padding:6px 12px;\">"+param.get("USER_NM")+"</td>";
		mailContents += "				</tr>";
		mailContents += "				<tr style=\"border-bottom:1px solid #efefef; border-bottom:0;\">";
		mailContents += "					<th style=\"padding:6px 12px; text-align:right;\">임시 비밀번호</th>";
		mailContents += "					<td style=\"padding:6px 12px;\">"+param.get("tempPw")+"</td>";
		mailContents += "				</tr>";
		mailContents += "			</tbody>";
		mailContents += "		</table>";
		mailContents += "		<div id=\"buttons\" style=\"width:100%; text-align:center; padding:6px 0;\">";
		mailContents += "			<a href=\"" + homepageUrl + "\" style=\"text-decoration:none\" target=\"_blank\"><button style=\"width:50%; max-width:300px; height:32px; line-height:1.6; padding:6px 12px; border-radius:0; overflow:hidden; cursor:pointer; border:1px solid #ccc; border-radius:3px 0 0 3px; background:#fff; background-image:linear-gradient(to bottom, #fff 0%, #ebebeb 100%);\"><span style=\"display:inline-block; padding:0 3px;\">홈페이지</span><span style=\"display:inline-block; padding:0 3px;\">바로가기</span></button></a>";
		mailContents += "		</div>";
		mailContents += "		<div id=\"footer\" style=\"width:100%; border-top:1px solid #ccc; padding:6px 0; margin:32px 0 16px; text-align:right;\">";
		mailContents += "			<img src=\""+homepageUrl+"/resources/images/logo_f.png\" alt=\"해운거래정보센터\" />";
		mailContents += "		</div>";
		mailContents += "	</div>";
        mailContents += "</body>";
        mailContents += "</html>";
        
		return ws.KRS_MailSend2("meic", "meic@krs.co.kr", (String)param.get("EMAIL"), "", "", title, mailContents);
	}
